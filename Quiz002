  <script>
    function check(button, isCorrect) {
      const buttons = button.parentElement.querySelectorAll("button");
      buttons.forEach(btn => {
        btn.disabled = true;
        btn.classList.remove("correct", "incorrect");
      });
      button.classList.add(isCorrect ? "correct" : "incorrect");
    }
  </script>
